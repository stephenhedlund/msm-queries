<h1>Actor #<%=@id%> details</h1>

<a href=/actors> Go back </a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@detail.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@detail.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@detail.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@detail.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@detail.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@detail.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @new_array.each do |films| %>
  <tr>
    <td><%= Movie.where({:id=>films}).first.title %></td>
    <td><%= Movie.where({:id=>films}).first.year %></td>
    <% director_id = Movie.where({:id=>films}).first.director_id %>
    <td><%= Director.where({:id=>director_id}).first.name %></td>
    
    <td><a href="/movies/<%= Movie.where({:id=>films}).first.id %>">Show details</a></td>

  </tr>
  <% end %>
  </table>
