<h1>Actor #<%=@id%> details</h1>

<a href=/actors> Go back </a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@detail.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@detail.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@detail.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@detail.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@detail.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@detail.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @filmography.all.each do |films| %>
  <tr>
    <td><%= films.title %></td>
    <td><%= films.year%></td>
    <td><%= films.director_id %></td>
    <td>
      <a href="/movies/<%= films.id %>">
        Show details
    </td>
  </tr>
  <% end %>
  </table>
