<h1>Director #<%=@id%> details </h1>

<a href=/directors> Go back </a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @detail.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @detail.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @detail.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @detail.image %>"style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@detail.created_at)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words (@detail.updated_at)%>
  </dd>
</dl>

<hr>
